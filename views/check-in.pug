extends layout

block content
  .jumbotron
    h1= title
    if doc && doc.users.length
      p Users checked-in:
      table.check-in-table.margin-btm-md
        tr 
          th Name
          th Id
        each user in doc.users
          tr
            td= user.name
            td= user.userId
    else
      p.margin-btm-lg No users checked-in so far

    button.btn.btn-warning.margin-btm-sm(type="button", onclick="location.reload()")
          span.glyphicon.glyphicon-refresh 
          | &nbsp;Refresh
    form.margin-btm-sm(action=base + "/stop-check-in/" + id, method="post")
        button.btn.btn-success(type="submit") Stop #{id} check-in
    form.margin-btm-sm(action=base + "/admin", method="post")
        button.btn.btn-info(type="submit") Back to admin section